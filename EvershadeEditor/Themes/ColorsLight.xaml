<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">#E0E0E0</Color>
    <Color x:Key="ElementColor">#EAEAEA</Color>
    <Color x:Key="ButtonColor">#D0D0D0</Color>
    <Color x:Key="FocusColor">#AAA</Color>
    <Color x:Key="AccentColor">#AF52FF</Color>
    <Color x:Key="TextColor">#000</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ElementBrush" Color="{StaticResource ElementColor}"/>
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource ButtonColor}"/>
    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
</ResourceDictionary>